<%= form_for @country do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <%= f.label :capital, 'Capital City' %>
  <%= f.text_field :capital %>
  <br>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <br>
  <%= f.label :population %>
  <%= f.text_field :population %>
  <br>
  <%= f.label :first_language %>
  <%= f.text_field :first_language %>
  <br>
  <%= f.label :national_symbol %>
  <%= f.text_field :national_symbol %>
  <br>
  <%= f.label :national_anthem %>
  <%= f.text_field :national_anthem %>
  <br>
  <%= f.submit 'Create Country!' %>
<% end %>